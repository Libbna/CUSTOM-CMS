{% extends 'layout.html.twig' %}

{% block body %}
	{% if (status == "true" or status == "false") %}
		<i>{{ message }}</i>
	{% endif %}

	<div class="block-wrapper mt-5">
		<h3 class="text-center text-uppercase">Create a Menu here!</h3>
		<div class="home__form mt-5 d-flex justify-content-center">
			<form action="menu-insert" class="p-4" method="POST">
				<div class="home__input mb-3">
					<input type="text" name="menu-title" class="form-control" autocomplete="off" placeholder="Menu Title"/>
				</div>

				<div class="home__input mb-3">
					<input type="text" name="menu-link" class="form-control" autocomplete="off" placeholder="Menu Link"/>
				</div>

				<button type="submit" name="submitBtn" class="btn sumbit-btn">Submit</button>
			</form>
		</div>
	</div>
{% endblock %}

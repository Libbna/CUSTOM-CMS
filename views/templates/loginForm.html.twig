{% extends 'layout.html.twig' %}


{% block body %}
	{% if (status == "true" or status == "false") %}
		<i>{{ message }}</i>
	{% endif %}

	<div class="container mt-5 login_container">
		<div class="col-xl-5 col-lg-6 col-md-8 col-sm-12 col-12 ">
			<h1 class="text-center">LOGIN</h1>
				{% if (error) %}
					<p class="alert alert-danger" role="alert">{{ error }}</p>
					{% endif %}
			<form action="login-insert" method="POST" class="border-0 login-form">
				<div class="form-group mb-3 required">
					<input type="text" name="userName" class="form-control rounded-0 frm_input" placeholder="Username" autocomplete="off">
				</div>
				<div class="form-group mb-3 required">
					<input type="password" name="userPassword" class="form-control rounded-0 frm_input" placeholder="Password">
				</div>
				<div class="form-group d-flex my-2">
					<input type="submit" name="submitBtn" value="Login" class="btn btn-primary mx-auto sumbit-btn">
				</div>
			</form>
		</div>
	</div>


{% endblock %}
